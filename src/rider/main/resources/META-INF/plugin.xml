<idea-plugin>
  <id>CyclomaticComplexity</id>
  <name>CyclomaticComplexity</name>
  <version>_PLACEHOLDER_</version>
  <vendor url="https://github.com/JetBrains/resharper-cyclomatic-complexity">JetBrains</vendor>
  <idea-version since-build="_PLACEHOLDER_" until-build="_PLACEHOLDER_" />
  <depends>com.intellij.modules.rider</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable groupId="language" instance="com.jetbrains.rider.plugins.cyclomaticcomplexity.options.CyclomaticComplexityOptionsPage" id="PowerToys.CyclomaticComplexity" />
  </extensions>

  <description>
<![CDATA[
<p>Calculates cyclomatic complexity for C#, VB, JavaScript, TypeScript and C++. Highlights any method that exceeds a configurable threshold</p>
]]>
  </description>
</idea-plugin>
